<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="vertical"
        android:id="@+id/linearForm">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logodeporumah"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DEPO MESSENGER"
            android:textSize="12pt"
            android:fontFamily="sans-serif-condensed-medium"
            android:textStyle="bold"
            android:textColor="@color/hitamhalus"
            android:layout_gravity="center_horizontal"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            app:met_floatingLabel="normal"
            android:id="@+id/et_email"
            android:layout_marginTop="10dp"
            android:inputType="textEmailAddress"
            android:textColor="@color/hitamhalus"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            app:met_floatingLabel="normal"
            android:id="@+id/et_password"
            android:layout_marginTop="10dp"
            android:inputType="textPassword"
            android:textColor="@color/hitamhalus"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="LOGIN"
            android:id="@+id/btnLogin"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimaryDark"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Lupa Password? Klik Disini"
            android:textColor="@color/hitamhalus"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:id="@+id/text_forgot"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tidak Punya Akun ? "
                android:textColor="@color/hitamhalus"
                android:textSize="7pt"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Daftar Disini"
                android:textColor="@color/hitamhalus"
                android:textAlignment="textEnd"
                android:textSize="7pt"
                android:textStyle="bold"
                android:id="@+id/textDaftar"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/abuabu">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Versi Beta \n DEPO BANGUNAN"
            android:textAlignment="center"
            android:textColor="@color/red"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>